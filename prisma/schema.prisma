// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  phone         String?        @unique
  password      String
  firstName     String
  lastName      String
  role          Role           @default(USER)
  isOnboarding  Boolean        @default(true)
  refreshTokens RefreshToken[]
  farms         Farm[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Farm {
  id          String      @id @default(uuid())
  name        String
  location    String?
  description String?
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  animals     Animal[]
  foodStocks  FoodStock[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([userId])
}

model Animal {
  id           String       @id @default(uuid())
  name         String
  type         AnimalType
  birthDate    DateTime?
  weight       Float?
  healthStatus HealthStatus @default(HEALTHY)
  farmId       String
  farm         Farm         @relation(fields: [farmId], references: [id], onDelete: Cascade)
  vaccines     Vaccine[]
  breedings    Breeding[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([farmId])
}

model Vaccine {
  id          String   @id @default(uuid())
  name        String
  date        DateTime
  description String?
  animalId    String
  animal      Animal   @relation(fields: [animalId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([animalId])
}

model Breeding {
  id              String        @id @default(uuid())
  date            DateTime
  method          BreedingMethod
  notes           String?
  animalId        String
  animal          Animal        @relation(fields: [animalId], references: [id], onDelete: Cascade)
  partnerAnimalId String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([animalId])
}

model FoodStock {
  id          String   @id @default(uuid())
  name        String
  quantity    Float
  unit        String
  farmId      String
  farm        Farm     @relation(fields: [farmId], references: [id], onDelete: Cascade)
  expiryDate  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([farmId])
}

enum Role {
  ADMIN
  USER
}

enum AnimalType {
  SHEEP
  GOAT
  LAMB
}

enum HealthStatus {
  HEALTHY
  SICK
  UNDER_TREATMENT
}

enum BreedingMethod {
  NATURAL
  ARTIFICIAL_INSEMINATION
}
